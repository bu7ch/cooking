{% extends 'base.html.twig' %}

{% block title %} Liste des aliments{% endblock %}
{% block monTitre %}Liste de tous les aliments
 {% if isCalorie %}
  avec moins de 50 Calories
  {% elseif isGlucide %}
    avec moins de 5 glucides
 {% endif %}
{% endblock %}
{% block body %}
<div class="container">
<a class=" btn btn-primary rounded" href="{{path('aliments')}}">Tous</a>
<a class=" btn btn-primary rounded" href="{{path('aliments_by_calories', {'calorie':50})}}">Aliments avec moins de 50 calories au 100g</a>
<a class=" btn btn-primary rounded" href="{{path('aliments_by_glucide', {'glucide':5})}}">Aliments avec moins de 5 glucides au 100g</a>
</div>
<div class="row">
  {% for aliment in aliments %}
    <div class="col-12 col-md-6 col-lg-4 col-xl-3">
      <div class="card border-primary mb-3 mx-auto" style="max-width:20rem">
        <div class="card-header text-center">
          <img src="{{asset("images/#{aliment.image}")}}" alt="{{aliment.nom}}" class="card-img-top" width="400px" height="400px">
        </div>
      
      <div class="card-body">
        <h3 class="card-title text-center pb-2 mx-3 border-bottom border-primary">{{aliment.nom}}</h3>
        <p class="card-text">
          <h4 class="text-center"> Prix(Kg): {{aliment.prix}} €</h4>
          <table class="table text-center">
            <tr class="table-primary">
              <td>Propriété(s)</td>
              <td>Valeur (100g)</td>
            </tr>
            <tr>
              <td>Calories</td>
              <td>{{aliment.calorie}}</td>
            </tr>
            <tr>
              <td>Protéines</td>
              <td>{{aliment.proteine}}</td>
            </tr>
            <tr>
              <td>Lipides</td>
              <td>{{aliment.lipide}}</td>
            </tr>
          </table>
        </p>
      </div>
    </div>
  </div>
  {% endfor %}
</div>

{% endblock %}
